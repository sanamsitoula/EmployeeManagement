@model List<Employee>

<h1>Employee List</h1>
<style>
    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px; /* Adjust spacing between cards */
    }

    .card {
        width: calc(25% - 20px); /* 25% width minus spacing */
        /* Other card styling properties */
    }
</style>
<p>
    <button class="btn btn-primary" id="btnCreate">Add New Employee</button>
</p>
<div class="card-container">
    @foreach (var employee in Model)
    {
        <div class="card">
            <div class="card-header">
                <h3>@employee.FullName</h3>
            </div>
            <div class="card-body">
                <img src="@employee.Document" alt="Employee Photo">
                <p>Email: @employee.Email</p>
                <p>Mobile Number: @employee.MobileNumber</p>
                <p>Department: @employee.Department.Name</p>
            </div>
            <div class="card-footer">
                <button class="btn btn-info btn-sm btnEdit" data-id="@employee.Id">Edit</button>
                <button class="btn btn-danger btn-sm btnDelete" data-id="@employee.Id">Delete</button>
            </div>
        </div>
    }
</div>
