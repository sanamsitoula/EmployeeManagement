<div id="modalContainer"></div>

@section Scripts {
    <script>
        // AJAX functions for loading partial views
        $(document).ready(function () {
            $("#btnCreate").click(function () {
                $.get('@Url.Action("Create", "Employees")', function (data) {
                    $('#modalContainer').html(data);
                    $('#modalContainer .modal').modal('show');
                });
            });

            $(".btnEdit").click(function () {
                var id = $(this).data("id");
                $.get('@Url.Action("Edit", "Employees")' + '/' + id, function (data) {
                    $('#modalContainer').html(data);
                    $('#modalContainer .modal').modal('show');
                });
            });

            $(".btnDelete").click(function () {
                var id = $(this).data("id");
                $.get('@Url.Action("Delete", "Employees")' + '/' + id, function (data) {
                    $('#modalContainer').html(data);
                    $('#modalContainer .modal').modal('show');
                });
            });

            // Handle form submission within modal
            $('#modalContainer').on('submit', 'form', function () {
                var form = $(this);
                $.ajax({
                    url: form.attr('action'),
                    type: form.attr('method'),
                    data: form.serialize(),
                    success: function (data) {
                        $('#modalContainer').html(data);
                        $('#modalContainer .modal').modal('show');
                        $('#employeeList').load('/Employees/Index #employeeList');
                    }
                });
                return false;
            });
        });
    </script>
}
